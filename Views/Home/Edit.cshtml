@model TodoList.Models.Task
@{
    ViewData["Title"] = "Edit Task";
}

<div class="container mt-5">
    <h3>Edit Task</h3>
    <form method="post" asp-action="Edit">
        <div class="form-group">
            <label for="TaskName">Task Name</label>
            <input type="text" class="form-control" id="TaskName" name="TaskName" value="@Model.TaskName" required />
        </div>

        <div class="form-group">
            <label for="Status">Status</label>
            <select class="form-control" id="Status" name="Status">
                        @Html.Raw("<option value=\"true\"" + (ViewBag.CategoryStatus == true ? " selected" : "") + ">Tamamlanmış</option>")
                        @Html.Raw("<option value=\"false\"" + (ViewBag.CategoryStatus == false ? " selected" : "") + ">Tamamlanmamış</option>")
            </select>
        </div>

        <div class="form-group">
            <label for="Deadline">Deadline</label>
            <input type="date" class="form-control" id="Deadline" name="Deadline" value="@Model.Deadline.ToString("yyyy-MM-dd")" required />
        </div>

        <input type="hidden" name="TaskId" value="@Model.TaskId" />

        <button type="submit" class="btn btn-primary mt-3">Update</button>
        <a href="@Url.Action("Index")" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
